<Window x:Class="yoursunny.P2008.Library.Admin.AdminMain"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="图书管理信息系统 管理中心" Height="600" Width="800">
    <Grid>
        <FlowDocumentScrollViewer VerticalScrollBarVisibility="Auto">
            <FlowDocument>
                <Paragraph FontSize="36" FontFamily="STXingkai" Foreground="#FFCB2B2B">图书管理信息系统 管理中心</Paragraph>
                <Paragraph>请选择你要管理的分馆，或者添加一个分馆：</Paragraph>
                <Section Name="LocList" Loaded="LocList_Load"/>
                <BlockUIContainer>
                    <Expander Name="LocNew" Header="添加新分馆">
                    </Expander>
                </BlockUIContainer>
                <Paragraph>[<Hyperlink Click="Exit_Click">退出</Hyperlink>]</Paragraph>
            </FlowDocument>
        </FlowDocumentScrollViewer>
    </Grid>
</Window>
