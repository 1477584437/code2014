<UserControl x:Class="yoursunny.P2008.Library.Admin.LocEditor"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Grid>
        <TabControl>
            <TabItem Header="基本信息">
                <TextBlock>
                    名称
                    <TextBox Name="name"/>
                    <LineBreak/>
                    地址
                    <TextBox Name="address"/>
                    <LineBreak/>
                    电话
                    <TextBox Name="phone"/>
                    <LineBreak/>
                    <Button Click="BasicSave_Click">保存修改</Button>
                    <Button Name="btnDelete" Visibility="Hidden" Click="Delete_Click">删除</Button>
                </TextBlock>
            </TabItem>
            <TabItem Header="馆员">
                <StackPanel Name="LibrarianList"/>
            </TabItem>
            <TabItem Header="书库">
                <TextBlock>
                    书库管理功能，演示版本未实现
                </TextBlock>
            </TabItem>
        </TabControl>
    </Grid>
    <UserControl.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Width" Value="200"/>
        </Style>
    </UserControl.Resources>
</UserControl>
