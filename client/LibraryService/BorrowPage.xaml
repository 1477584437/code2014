<Page x:Class="yoursunny.P2008.Library.ServiceDesk.BorrowPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="BorrowPage">
    <FlowDocumentScrollViewer VerticalScrollBarVisibility="Hidden">
        <FlowDocument>
            <Paragraph FontFamily="STXingkai" FontSize="30" Foreground="#FFCB2B2B">借阅图书</Paragraph>
            <Paragraph>
                读者条码
                <TextBox Name="reader_barcode"/>
                <LineBreak/>
                馆藏条码
                <TextBox Name="copy_barcode"/>
                <LineBreak/>
                <InlineUIContainer>
                    <Button Click="borrow_Click">借阅</Button>
                </InlineUIContainer>
                <Run Name="msg"></Run>
            </Paragraph>
        </FlowDocument>
    </FlowDocumentScrollViewer>
    <Page.Resources>
        <Style TargetType="TextBox">
            <Setter Property="Width" Value="200"/>
        </Style>
    </Page.Resources>
</Page>
