<Window x:Class="yoursunny.P2008.IS409.ScoreBoard"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Title="比分牌" Height="100" Width="300" Background="White" ResizeMode="CanMinimize">
    <Grid>
        <Canvas HorizontalAlignment="Left" Width="100">
            <Label Name="L" FontSize="40" Canvas.Right="0">0</Label>
        </Canvas>
        <Label FontSize="40" Margin="120,0,120,0">:</Label>
        <Canvas HorizontalAlignment="Right" Width="100">
            <Label Name="R" FontSize="40" Canvas.Left="0">0</Label>
        </Canvas>
    </Grid>
</Window>
